# AV Scanner Configuration
# Copy to /etc/av-scanner/av-scanner.env

# Server
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Active engine: clamav or trendmicro
AV_ENGINE=clamav

# File handling
UPLOAD_DIR=/tmp/av-scanner
MAX_FILE_SIZE=104857600

# ClamAV Configuration
# Both engines use the same interface: log file + binary
CLAMAV_RTS_ENABLED=false
CLAMAV_RTS_LOG_PATH=/var/log/clamav/clamonacc.log
CLAMAV_SCAN_BINARY_PATH=/usr/bin/clamdscan
CLAMAV_TIMEOUT=60000

# Trend Micro DS Agent Configuration
# Both engines use the same interface: log file + binary
TM_RTS_LOG_PATH=/var/log/ds_agent/ds_agent.log
TM_SCAN_BINARY_PATH=/opt/ds_agent/dsa_scan
TM_TIMEOUT=60000
